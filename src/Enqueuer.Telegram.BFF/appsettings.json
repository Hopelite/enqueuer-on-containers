{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "EventBus": "{CONNECTION_STRING}"
  },
  "AllowedHosts": "*",
  "TelegramClient": {
    "AccessToken": "{ACCESS_TOKEN}"
  },
  "IdentityProvider": {
    "BaseAddress": "{AUTHORIZATION_SERVER_URL}",
    "ClientId": "{CLIENT_ID}",
    "ClientSecret": "{CLIENT_SECRET}",
    "RequiredScope": [
      "user"
    ]
  },
  "QueueingClient": {
    "BaseAddress": "{QUEUEING_CLIENT_URL}",
    "ClientId": "{CLIENT_ID}",
    "ClientSecret": "{CLIENT_SECRET}",
    "RequiredScope": [
      "queue"
    ]
  },
  "ChatConfigurationClient": {
    "BaseAddress": "{CHAT_CONFIGURATION_CLIENT_URL}"
  },
  "EventBus": {
    "SubscriptionClientName": "Telegram_BFF"
  },
  "ConfigurationCacheOptions": {
    "SlidingExpiration": "00:02:00",
    "AbsoluteExpiration": "00:05:00",
    "MaxSize": 64000
  }
}
